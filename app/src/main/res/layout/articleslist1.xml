<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/source_name"
                android:text="GAURDIAN"
                android:layout_marginRight="13dp"
                android:layout_marginLeft="20dp"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="10sp"
                fontPath= "fonts/proxima-nova-bold.otf"
                android:textStyle="bold"
                android:layout_marginTop="0dp"/>

                <TextView
                    android:id="@+id/read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="READ"
                    fontPath= "fonts/proxima-nova-extrabold.otf"
                    android:textAllCaps="true"
                    android:textSize="10sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fontPath= "fonts/proxima-nova-bold.otf"
                android:id="@+id/Date"
                android:layout_below="@id/article_title"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:textSize="10sp"
                android:text="27 may"
                android:lineSpacingExtra="-1sp"
                android:textAllCaps="true"
                android:textColor="#9b9b9b"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/article_title"
                fontPath= "fonts/proxima-nova-regular.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:paddingBottom="6dp"
                android:text="Corbyn vows to 'turn back Tory tide' after disastrous Copeland defeat"
                android:layout_below="@id/source_name"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/article_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_launcher"/>

    </LinearLayout>


</LinearLayout>