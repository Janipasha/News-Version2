<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/articlelayout"
    android:orientation="vertical"
    android:layout_width="153dp"
    android:layout_height="wrap_content"
    tools:ignore="MissingPrefix"
    android:layout_marginRight="8dp"
    android:background="#ffffff">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_marginRight="8dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#42000000"
        >

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
      android:background= "@drawable/gradient_card"
           >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/globe"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="7dp"
            android:scaleType="fitXY"
            android:layout_marginBottom="12dp"
            />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="9dp"
                android:id="@+id/source_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_marginBottom="-3dp"
                android:minHeight="0dp"
                fontPath= "fonts/montserrat-medium.ttf"
                android:textColor="#222222"
                android:letterSpacing="-0.04"
                tools:text="Times of India" />

            <TextView
                android:layout_marginTop="-3dp"
                android:minHeight="0dp"
                android:id="@+id/Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                fontPath= "fonts/roboto-regular.ttf"
                android:textStyle="normal"
                android:textColor="#9b9b9b"
                tools:text="9.30 AM, 25 Sep 2017"
                />

        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/article_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        fontPath= "fonts/roboto-light.ttf"
        android:textStyle="normal"
        android:textColor="#323232"
        android:lineSpacingExtra="3sp"
        android:minLines="6"
        tools:text="Presidential election | Modi-Shah ace: Who can object to a Dalit rights crusader Ram Nath Kovind?"
        />

    </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>