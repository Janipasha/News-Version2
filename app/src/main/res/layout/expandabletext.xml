<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:ignore="MissingPrefix">


    <LinearLayout
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7">

            <TextView
                android:id="@+id/story_title_header1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="-3sp"
                tools:text="STARTUPS &amp; TECHNOLOGY COMPANIES SOUP"
                fontPath= "fonts/proxima-nova-black.otf"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="13dp"
                android:textAllCaps="true"

                />
        </LinearLayout>


            <!--<Button
                android:id="@+id/followbutton_header1"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/button1"
                android:padding="10dp"
                android:text="Follow"
                android:textColor="#ffffff"
                android:onClick="onClick"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                fontPath= "fonts/proxima-nova-black.otf"/>-->

            <ImageView
                android:onClick="onClick"
                android:id="@+id/follow_image_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight= "2"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/plus"/>

    </LinearLayout>

    <ExpandableListView
        android:layout_below="@id/head"
        android:id="@+id/lvExp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <ProgressBar
        android:id="@+id/progressbarstory"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:theme="@style/AppTheme.WhiteAccent"
        android:layout_centerInParent="true" />

</RelativeLayout>